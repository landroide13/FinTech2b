
<h1>My PortFolio</h1>

<h3>Search for Stock</h3>

<div id="stock-lookup">
  <%= form_tag search_stocks_path, remote: true, method: :get, id:"stock-lookup-form" do %>
    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-10">
        <%= text_field_tag :stock, params[:stock], placeholder:"Stock Ticker Symbol", class:"form-control search-box input-lg", auotfocus:"true" %>
      </div>
      <div class="col-md-2">
        <%= button_tag(type: :submit, class:"btn btn-lg btn-success") do %>
           <i class="fa fa-search"></i> Lookup this Stock
        <% end %>
      </div>
    </div>    
  <% end %>
</div> 

<div id="results">
  <%= render 'results' %>
</div>

<%= render 'stocks/list' %>


